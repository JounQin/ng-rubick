{
  "extends": [
    "tslint:recommended",
    "tslint-angular",
    "tslint-config-standard",
    "tslint-config-prettier",
    "tslint-plugin-prettier"
  ],
  "rules": {
    "angular-whitespace": [
      true,
      "check-interpolation",
      "check-pipe",
      "check-semicolon"
    ],
    "component-selector": [true, "element", "rb", "kebab-case"],
    "directive-selector": [true, "attribute", "rb", "camelCase"],
    "import-blacklist": true,
    "interface-name": false,
    "max-classes-per-file": false,
    "member-access": false,
    "no-console": [true, "log"],
    "no-floating-promises": false,
    "no-empty": [true, "allow-empty-catch"],
    "no-unused-expression": true,
    "pipe-impure": true,
    "prettier": true
  }
}
