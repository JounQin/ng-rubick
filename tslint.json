{
  "extends": ["tslint:recommended", "tslint-angular", "tslint-config-prettier", "tslint-plugin-prettier"],
  "rules": {
    "angular-whitespace": [true, "check-interpolation", "check-pipe", "check-semicolon"],
    "component-selector": [true, "element", "rb", "kebab-case"],
    "directive-selector": [true, "attribute", "rb", "camelCase"],
    "import-blacklist": true,
    "interface-name": false,
    "max-classes-per-file": false,
    "member-access": false,
    "no-console": [true, "log"],
    "no-empty": [true, "allow-empty-catch"],
    "no-unused-expression": true,
    "no-unused-variable": true,
    "ordered-imports": [
      true,
      {
        "named-imports-order": "lowercase-last"
      }
    ],
    "pipe-impure": true,
    "pipe-naming": [true, "camelCase"],
    "prettier": true
  },
  "linterOptions": {
    "exclude": ["node_modules/**"]
  }
}
