{
  "name": "ng-rubick",
  "private": true,
  "version": "0.0.1",
  "description": "Refactor the whole Rubick project with better structure and AOT compiler",
  "repository": "git@github.com:JounQin/ng-rubick.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "scripts": {
    "dev": "env-cmd .env env-cmd --fallback .env.local ts-node server",
    "build": "rimraf dist && env-cmd --fallback .env.local env-cmd .env webpack --config build/webpack.config.ts --colors --progress",
    "start": "env-cmd --fallback .env.local env-cmd .env ts-node server",
    "lint": "tslint -p . -t stylish '**/*.ts'",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{json,md}": ["prettier --write", "git add"],
    "*.ts": ["tslint -p . -t stylish", "git add"]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": null
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "printWidth": 150
        }
      }
    ]
  },
  "dependencies": {
    "@angular/common": "^5.2.7",
    "@angular/compiler": "^5.2.7",
    "@angular/core": "^5.2.7",
    "@angular/platform-browser": "^5.2.7",
    "@angular/platform-browser-dynamic": "^5.2.7",
    "@angular/router": "^5.2.7",
    "debug": "^3.1.0",
    "env-cmd": "^7.0.0",
    "koa": "^2.5.0",
    "koa-compose": "^4.0.0",
    "koa-compress": "^2.0.0",
    "koa-logger": "^3.1.0",
    "koa-static-cache": "^5.1.2",
    "rxjs": "^5.5.6",
    "zone.js": "^0.8.20"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^5.2.7",
    "@angular/language-service": "^5.2.7",
    "@ngtools/webpack": "JounQin/modules#@ngtools/webpack",
    "@types/debug": "^0.0.30",
    "@types/extract-text-webpack-plugin": "^3.0.1",
    "@types/html-webpack-plugin": "^2.30.2",
    "@types/koa": "^2.0.44",
    "@types/koa-compose": "^3.2.2",
    "@types/koa-compress": "^2.0.8",
    "@types/koa-logger": "^3.1.0",
    "@types/koa-webpack": "^1.0.0",
    "@types/node": "^9.4.6",
    "@types/webpack": "^3.8.8",
    "autoprefixer": "^8.0.0",
    "css-loader": "^0.28.10",
    "exports-loader": "^0.7.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.0.4",
    "husky": "^0.14.3",
    "koa-webpack": "^3.0.0",
    "lint-staged": "^7.0.0",
    "node-sass": "^4.7.2",
    "normalize.css": "^8.0.0",
    "postcss-loader": "^2.1.1",
    "prettier": "^1.11.1",
    "pug": "^2.0.0-rc.4",
    "pug-html-loader": "^1.1.5",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.20.2",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-angular": "^1.1.1",
    "tslint-config-prettier": "^1.9.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.7.2",
    "webpack": "^4.0.1",
    "webpack-cli": "^2.0.10"
  }
}
