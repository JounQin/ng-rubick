{
  "name": "ng-rubick",
  "private": true,
  "version": "0.0.1",
  "description": "Refactor the whole Rubick project with better structure and AOT compiler",
  "repository": "git@github.com:JounQin/ng-rubick.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "scripts": {
    "watch:pug": "pug src -P -w --doctype html",
    "watch:server": "env-cmd .env env-cmd --fallback .env.local ts-node server",
    "dev": "run-p watch:*",
    "build": "rimraf dist && pug src --doctype html && env-cmd --fallback .env.local env-cmd .env webpack --config build/webpack.config.ts --colors --progress",
    "start": "env-cmd --fallback .env.local env-cmd .env ts-node server",
    "lint": "tslint -p . -t stylish '**/*.ts'",
    "precommit": "lint-staged",
    "sync:pull": "bash build/sync-pull.sh",
    "sync:push": "bash build/sync-push.sh"
  },
  "lint-staged": {
    "*.{json,md}": ["prettier --write", "git add"],
    "*.ts": ["tslint -p . -t stylish", "git add"]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": null
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "printWidth": 180
        }
      }
    ]
  },
  "dependencies": {
    "@angular/common": "^6.0.0-beta.7",
    "@angular/core": "^6.0.0-beta.7",
    "@angular/forms": "^6.0.0-beta.7",
    "@angular/platform-browser": "^6.0.0-beta.7",
    "@angular/platform-browser-dynamic": "^6.0.0-beta.7",
    "@angular/router": "^6.0.0-beta.7",
    "debug": "^3.1.0",
    "env-cmd": "^7.0.0",
    "koa": "^2.5.0",
    "koa-compose": "^4.0.0",
    "koa-compress": "^2.0.0",
    "koa-logger": "^3.2.0",
    "koa-static-cache": "^5.1.2",
    "lodash-es": "^4.17.7",
    "rxjs": "^5.5.7",
    "zone.js": "^0.8.20"
  },
  "devDependencies": {
    "@angular/compiler": "^6.0.0-beta.7",
    "@angular/compiler-cli": "^6.0.0-beta.7",
    "@angular/language-service": "^6.0.0-beta.7",
    "@ngtools/webpack": "^6.0.0-beta.5",
    "@types/debug": "^0.0.30",
    "@types/extract-text-webpack-plugin": "^3.0.2",
    "@types/html-webpack-plugin": "^2.30.3",
    "@types/koa": "^2.0.44",
    "@types/koa-compose": "^3.2.2",
    "@types/koa-compress": "^2.0.8",
    "@types/koa-logger": "^3.1.0",
    "@types/koa-webpack": "^1.0.0",
    "@types/lodash": "^4.14.104",
    "@types/node": "^9.4.7",
    "@types/webpack": "^4.1.0",
    "autoprefixer": "^8.1.0",
    "css-loader": "^0.28.10",
    "exports-loader": "^0.7.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "font-awesome": "^4.7.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.0.6",
    "husky": "^0.14.3",
    "koa-webpack": "^3.0.2",
    "lint-staged": "^7.0.0",
    "lodash": "^4.17.5",
    "node-sass": "^4.7.2",
    "normalize.css": "^8.0.0",
    "npm-run-all": "^4.1.2",
    "postcss-loader": "^2.1.1",
    "prettier": "^1.11.1",
    "pug": "^2.0.1",
    "pug-cli": "^1.0.0-alpha6",
    "pug-html-loader": "^1.1.5",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.7",
    "sass-resources-loader": "^1.3.3",
    "style-loader": "^0.20.3",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-angular": "^1.1.1",
    "tslint-config-prettier": "^1.10.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.7.2",
    "url-loader": "^1.0.1",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.12"
  }
}
